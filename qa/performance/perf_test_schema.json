{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "test_type",
    "block_rate",
    "initial_txs",
    "network_topology",
    "latency_settings",
    "nodes"
  ],
  "properties": {
    "test_type": {
      "type": "string",
      "enum": [
        "mempool",
        "mempool_timed",
        "transactions_per_second",
        "all_transactions"
      ]
    },
    "test_run_time": {
      "type": "number"
    },
    "block_rate": {
      "type": "number"
    },
    "initial_txs": {
      "type": "number"
    },
    "network_topology": {
      "type": "string",
      "enum": [
        "daisy_chain",
        "ring",
        "star"
      ]
    },
    "latency_settings": {
      "type": "object",
      "properties": {
        "get_peer_spec": {
          "type": "number"
        },
        "peer_spec": {
          "type": "number"
        },
        "transaction": {
          "type": "number"
        },
        "block": {
          "type": "number"
        },
        "request_modifier_spec": {
          "type": "number"
        },
        "modifiers_spec": {
          "type": "number"
        }
      },
      "required":[
        "get_peer_spec",
        "peer_spec",
        "transaction",
        "block",
        "request_modifier_spec",
        "modifiers_spec"
      ]
    },
      "nodes": {
        "type": "array",
        "minItems": 1,
        "maxItems": 10,
        "items": {
          "type": "object",
          "properties": {
            "forger": {
              "type": "boolean"
            },
            "tx_creator": {
              "type": "boolean"
            }
          },
          "required": [
            "forger",
            "tx_creator"
          ]
        }
    }
  }
}

