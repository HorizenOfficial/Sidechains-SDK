{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "test_type",
    "multi_machine",
    "use_multiprocessing",
    "initial_ft_amount",
    "block_rate",
    "initial_txs",
    "extended_transaction",
    "big_transaction",
    "send_coins_to_address",
    "network_topology",
    "nodes"
  ],
  "properties": {
    "test_type": {
      "type": "string",
      "enum": [
        "mempool",
        "mempool_timed",
        "transactions_per_second",
        "all_transactions"
      ]
    },
    "multi_machine": {
      "type": "boolean"
    },
    "use_multiprocessing": {
      "type": "boolean"
    },
    "initial_ft_amount": {
      "type": "number"
    },
    "test_run_time": {
      "type": "number"
    },
    "block_rate": {
      "type": "number"
    },
    "initial_txs": {
      "type": "number"
    },
    "extended_transaction": {
      "type": "boolean"
    },
    "big_transaction": {
      "type": "boolean"
    },
    "send_coins_to_address": {
      "type": "boolean"
    },
    "network_topology": {
      "type": "string",
      "enum": [
        "daisy_chain",
        "ring",
        "star",
        "p2p",
        "strong_connected_forgers"
      ]
    },
    "machines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "ip_address": {
            "type": "string"
          },
          "port": {
            "type": "string"
          },
          "ssh": {
            "type": "object",
            "properties": {
              "username": {
                "type": "string"
              },
              "password": {
                "type": "string"
              }
            },
            "required":[
              "username",
              "password"
            ]
          }
        }
        },
        "required": [
          "ip_address",
          "port",
          "ssh"
          ]
        },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "items": {
        "type": "object",
        "properties": {
          "forger": {
            "type": "boolean"
          },
          "tx_creator": {
            "type": "boolean"
          },
          "latency_settings": {
            "type": "object",
            "properties": {
              "get_peer_spec": {
                "type": "number"
              },
              "peer_spec": {
                "type": "number"
              },
              "transaction": {
                "type": "number"
              },
              "block": {
                "type": "number"
              },
              "request_modifier_spec": {
                "type": "number"
              },
              "modifiers_spec": {
                "type": "number"
              }
            },
            "required":[
              "get_peer_spec",
              "peer_spec",
              "transaction",
              "block",
              "request_modifier_spec",
              "modifiers_spec"
            ]
          }
        },
        "required": [
          "forger",
          "tx_creator",
          "latency_settings"
        ]
      }
    }
  }
}

